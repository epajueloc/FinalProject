<style>
	body {
		background: url(http://www.stylehiclub.com/wp-content/uploads/2013/08/Camps-Bay-Street-with-View.jpg);
		background-size: cover;
	}
</style>
<body>
<h1>Bridge</h1>
<div class= form>
<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: 'Email address',required: false, autofocus: true %>
    <%= f.input :password, label: false, placeholder: 'Password',required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<br/>
<div class="shared-links">
<%= render "devise/shared/links" %>
</div>
</div>
</body>