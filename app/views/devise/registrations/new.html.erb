<%= render 'navbar' %>

<div class="form">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :role, :collection => [:client, :worker], required: true %>

    <hr>

    <h4> Please fill in the following fields only if you are a worker </h4>

    <hr>

    <%= f.association :categories, label: "Service categories", as: :check_boxes, label_method: :type %>
    <%= f.input :description, label: "Describe services provided" %>
    <%= f.input :phone, label: "Contact number" %>
    <%= f.input :avatar, label: "Upload photo", as: :file %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>