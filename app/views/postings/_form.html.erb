<%= simple_form_for [current_user, @posting] do |f| %>

<% if @posting.errors.any? %>
<h3>
<%= pluralize(@posting.errors.count, "error") %>
This posting could not be saved
</h3>
<ul>
<% @posting.errors.full_messages each do |message| %>
<li><%= message %></li>
</ul>

<% end %>
<% end %>

</br>
</br>

<p>
	<div class="form-inputs">
	<%= f.input :title %>
	<%= f.association :categories, value_method: :type %>
	<%= f.input :description %>
  	<%= f.input :date %>
  	<%= f.input :compensation, placeholder: "Ex. R100/hour or R500/service" %>
  	<%= f.input :phone %>
  	<%= f.input :email %>
  	</div>
  	<%= f.button :submit %>
</p>

<% end %>