<h1>Hello <%= @user.name %>!</h1>

<button><%= link_to 'View Profile', worker_path(current_user) %></button>

<% @categories.each do |category| %>
	<% if category.postings.count >= 1 %>
		<h4><%= link_to category.type, category_path(category) %></h4>
		<% category.postings.each do |posting| %>
			<p><%= posting.title %></p>
		<% end %>
	<% end %>

<% end %>