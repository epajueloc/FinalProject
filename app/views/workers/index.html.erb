<%= render 'navbar' %>

<h1>Hello <%= @user.name %>!</h1>

<body>
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Job Postings
                    <small>by category</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
        <% @categories.each do |category| %>
	          <div class="col-md-3 portfolio-item">
		          	<%= link_to category_path(category) do %>
		          		<%= category.type %> <br/>
		          		<i class="fa fa-<%= category.icon %> fa-5x"></i> 
		          	<% end %>
	          </div>
				<% end %>
        </div>

        <hr>
  
      <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Bridge 2015</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
</body>